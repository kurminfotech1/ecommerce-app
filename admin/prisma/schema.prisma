
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


enum Role {
  ADMIN
  SUPERADMIN
}

model Admin {
  id          String   @id @default(uuid())
  email       String   @unique
  full_name   String?
  password    String?
  role        Role     @default(ADMIN)
  phone       String?
  country     String?
  state       String?
  city        String?
  postal_code String?
  createdAt   DateTime @default(now())
}


model Category {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique

  parentId  String?
  parent    Category?  @relation("CategoryTree", fields: [parentId], references: [id], onDelete: Cascade)
  children  Category[] @relation("CategoryTree")

  is_active Boolean   @default(true)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  products Product[]
}


model Product {
  id          String   @id @default(uuid())

  category_id String
  category    Category @relation(fields: [category_id], references: [id])

  parentId    String?
  parent      Product?   @relation("ProductHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children    Product[]  @relation("ProductHierarchy")

  // basic
  product_name String
  slug         String?  @unique
  description  String?
  short_desc   String?

  // variant attributes (ONLY for children)
  size         String?
  color        String?

  // pricing
  price         Float
  compare_price Float?

  // inventory
  stock Int @default(0)
  sku   String? @unique

  // status
  is_active   Boolean @default(true)
  is_featured Boolean @default(false)

  // seo
  meta_title String?
  meta_desc  String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  images product_images[]
}

model product_images {
  id         String   @id @default(uuid())
  product_id String
  image_url  String
  sort_order Int     @default(0)

  product Product @relation(fields: [product_id], references: [id], onDelete: Cascade)
}





model User {
  id          String   @id @default(uuid())
  full_name   String
  email       String   @unique
  password    String
  phone       String
  is_verified Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  addresses   Address[]
}

model Address {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  full_name String
  phone     String
  line1     String
  line2     String?
  city      String
  state     String
  pincode   String
  country   String

  createdAt DateTime @default(now())
}
